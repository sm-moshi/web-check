{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"target": "es2023",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["astro/client", "vite/client", "react", "react-dom"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@pages/*": ["pages/*"],
			"@styles/*": ["styles/*"],
			"@assets/*": ["assets/*"]
		}
	},
	"include": [
		"src",
		".astro/types.d.ts",
		"api/**/*.js",
		"scripts/**/*.{cjs,js}",
		"astro.config.mjs",
		"eslint.config.ts",
		"server.js",
		"svelte.config.js",
		"vite.config.js"
	],
	"exclude": ["dist"]
}
